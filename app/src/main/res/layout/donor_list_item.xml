<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="@drawable/border_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/SurnameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:text="Surname"
                android:textSize="22sp"
                android:textStyle="bold"
                android:maxLength="10"/>
            <TextView
                android:id="@+id/NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:maxLines="1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:maxLength="12"
                android:layout_toEndOf="@id/SurnameTextView"/>

            <ImageView
                android:id="@+id/vectorImageView"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/message" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LastBloodDonation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:text="Date"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/BloodGroupTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood groop"
                android:maxLines="1"
                android:textSize="22sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:maxLength="12"
                android:layout_toEndOf="@id/LastBloodDonation"/>

            <HorizontalScrollView
                android:id="@+id/horizontalScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/vectorImageView2"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/delete" />

                    <ImageView
                        android:id="@+id/vectorImageView3"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/pen" />

                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
